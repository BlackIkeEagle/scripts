#!/bin/bash
xc=1
until (( xc == 0 )) ; do
	 case $(( RANDOM % 6 )) in
		  0) ip=$(wget -t 2 -T 5 -q -O- http://showip.codebrainz.ca/) ;;
		  1) ip=$(wget -t 2 -T 5 -q -O- http://www.whatismyip.com/automation/n09230945.asp) ;;
		  2) ip=$(wget -t 2 -T 5 -q -O- http://cfaj.freeshell.org/ipaddr.cgi) ;;
		  3) ip=$(wget -t 2 -T 5 -q -O- https://secure.informaction.com/ipecho/) ;;
		  4) ip=$(wget -t 2 -T 5 -q -O- http://icanhazip.com/) ;;
		  5) ip=$(wget -t 2 -T 5 -q -O- http://checkip.dyndns.org/) ;;
	 esac

     xc=$?
done

echo -n "${ip//[^0-9.]}"
